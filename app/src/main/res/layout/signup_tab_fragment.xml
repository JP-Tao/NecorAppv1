<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/email_signup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent=".74"
        app:layout_constraintVertical_bias=".121"
        app:layout_constraintHorizontal_bias=".5"
        android:background="@drawable/edit_text_bg"
        android:hint="Email"

        android:paddingLeft="20dp"
        android:paddingRight="8.5dp"
        android:paddingTop="8.5dp"
        android:paddingBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/mobile_num"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:background="@drawable/edit_text_bg"

        android:hint="Mobile Number"
        android:inputType="number|phone"
        android:paddingLeft="20dp"
        android:paddingTop="8.5dp"
        android:paddingRight="8.5dp"
        android:paddingBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/email_signup"
        app:layout_constraintHorizontal_bias=".5"
        app:layout_constraintStart_toStartOf="@+id/email_signup"
        app:layout_constraintTop_toBottomOf="@+id/email_signup"
        app:layout_constraintVertical_bias="0"/>

    <EditText
        android:id="@+id/pass_signup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:background="@drawable/edit_text_bg"

        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        android:paddingTop="8.5dp"
        android:paddingRight="8.5dp"
        android:paddingBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/mobile_num"
        app:layout_constraintHorizontal_bias=".5"
        app:layout_constraintStart_toStartOf="@+id/mobile_num"
        app:layout_constraintTop_toBottomOf="@+id/mobile_num"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintWidth_percent=".74" />

    <EditText
        android:id="@+id/pass_conf"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:background="@drawable/edit_text_bg"

        android:hint="Secret Question"
        android:paddingLeft="20dp"
        android:paddingTop="8.5dp"
        android:paddingRight="8.5dp"
        android:paddingBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/pass_signup"
        app:layout_constraintStart_toStartOf="@+id/pass_signup"
        app:layout_constraintTop_toBottomOf="@+id/pass_signup"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintWidth_percent=".74" />

    <Button
        android:id="@+id/btn_signup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:fontFamily="@font/mmedium"
        android:text="SIGNUP"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/pass_conf"
        app:layout_constraintStart_toStartOf="@+id/pass_conf"
        app:layout_constraintTop_toBottomOf="@+id/pass_conf"
        app:layout_constraintVertical_bias="0.071"
        app:layout_constraintWidth_percent=".6" />


